.topiclist{
  height: 130px;
  width: 98%;   
  border-top: 1px solid;
  border-top-color: lavender;
  border-bottom: 1px solid lavender;  
  padding-left: 1%;
  padding-right: 1%;  
  padding-top: 2%;
  padding-bottom: 2%;                                                             
}

.topic-title{
  height: 25px; 
  width: 100%;
  font-size: 16px;
  display: flex;
  margin-top: 10px;
}

.topic-title-text{
  overflow: hidden; 
  white-space: nowrap;
  width: 89%;
  text-overflow: ellipsis;
  height: 25px;
  margin-left: 1%;
}

.tab-type-top{
  width: 10%;
  background-color: green;
  color: #fff;
  height: 21px;
  display: flex;
  justify-content: center;
  font-size: 14px;
}

.tab-type-all{
  width: 10%;
  background-color: lightgrey;
  color: rgb(31, 29, 29);
  height: 21px;
  display: flex;
  justify-content: center;
  font-size: 14px;
}

.topic-content{
  color: grey;
  font-size: 12px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 30px;
  width: 100%;
  padding-top: 10px;
  padding-bottom: 5px;
}

.topic-bottom{
  width: 100%;
  height: 30px;
  display: flex;
  font-size: 14px;
  color: grey;
  align-items: center;
  margin-top: 10px;
  margin-right: 10px;
}

.topic-bottom-author{
  display: flex;
  align-items: center;
  margin-right: 15px;
}

.topic-bottom-author>image{
  height: 20px;
  width: 20px;
  border-radius: 50%;
}

.topic-bottom-author-text{
  margin-left: 3px;
}

.topic-bottom-wid{
  height: 18px;
  border-left: 1px solid grey;
  display: flex;
  justify-content: center;
  padding-left: 15px;
  padding-right: 15px;
}